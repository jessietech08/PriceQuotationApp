@model PriceQuotationApp.Models.Calculation

<h1>Price Quotation</h1>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="Subtotal">Sales Price:</label>
        <input asp-for="Subtotal" class="form-control" />
        <span asp-validation-for="Subtotal"></span>
    </div>
    <div class="form-group">
        <label asp-for="DiscountPercent">Discount Percent:</label>
        <input asp-for="DiscountPercent" class="form-control" />
        <span asp-validation-for="DiscountPercent"></span>
    </div>
    <div class="form-group">
        <label>Discount Amount:</label>
        <p>@Model?.DiscountAmount.ToString("C")</p>
    </div>
    <div class="form-group">
        <label>Total:</label>
        <p>@Model?.Total.ToString("C")</p>
    </div>
    <div class="form-group">
        <input type="submit" value="Calculate" class="btn btn-primary" />
        <a asp-action="Clear">Clear</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}